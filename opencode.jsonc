{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md"],
  "permission": {
    "*": "allow",
    "external_directory": "allow"
  },
  "provider": {
    "openai": {
      "options": {
        "websearch_cited": {
          "model": "gpt-5.2"
        }
      }
    },
  },
  "plugin": [
    "opencode-websearch-cited@1.2.0"
  ],
  "mcp": {
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "enabled": true
    },
    "cloudflare-bindings": {
      "type": "remote",
      "url": "https://bindings.mcp.cloudflare.com/mcp",
      "enabled": true,
      "oauth": {
        "scope": "tools:read"
      }
    },
    "cloudflare-builds": {
      "type": "remote",
      "url": "https://builds.mcp.cloudflare.com/mcp",
      "enabled": true,
      "oauth": {
        "scope": "tools:read"
      }
    }
  }
}
